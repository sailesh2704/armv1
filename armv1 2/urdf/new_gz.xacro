<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

  <!-- Properties -->
  <xacro:property name="base_len" value="0.1"/>
  <xacro:property name="base_rad" value="0.2"/>
  <xacro:property name="rot_len" value="0.5"/>
  <xacro:property name="rot_rad" value="0.05"/>
  <xacro:property name="trans_size" value="0.1 0.5 0.1"/>

  <!-- Base Link -->
  <link name="base">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="${base_len}" radius="${base_rad}"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${base_len}" radius="${base_rad}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0025" iyz="0.0" izz="0.0016"/>
    </inertial>
  </link>

  <!-- Rotating Link -->
  <link name="rot">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="${rot_len}" radius="${rot_rad}"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${rot_len}" radius="${rot_rad}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0025" iyz="0.0" izz="0.0016"/>
    </inertial>
  </link>

  <!-- Joint 1: Base to Rotating Link (Rotational) -->
  <joint name="base_to_rot" type="continuous">
    <parent link="base"/>
    <child link="rot"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Translational Link -->
  <link name="trans">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="${trans_size}"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="${trans_size}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0025" iyz="0.0" izz="0.0016"/>
    </inertial>
  </link>

  <!-- Joint 2: Rotating Link to Translational Link (Translational) -->
  <joint name="rot_to_trans" type="prismatic">
    <parent link="rot"/>
    <child link="trans"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.25" upper="0.25" effort="100" velocity="1.0"/>
  </joint>

  <ros2_control name="CustomHardware" type="system">
    <hardware>
      <plugin>custom_hardware/CustomHardware</plugin>
    </hardware>
    <joint name="base_to_rot">
      <command_interface name="position">
        <param name="min">-3.14</param>
        <param name="max">3.14</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="rot_to_trans">
      <command_interface name="position">
        <param name="min">-1.0</param>
        <param name="max">1.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>100.0</updateRate>
    </plugin>
    <plugin name="joint_controller" filename="libgazebo_ros_joint_controller.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>100.0</updateRate>
      <joint_name>base_to_rot</joint_name>
      <joint_name>rot_to_trans</joint_name>
      <control_type>position</control_type>
    </plugin>
  </gazebo>
</robot>